<table>
  <thead>
    <tr>
      <th>Generated</th>		
      <th>System</th>
      <th>Service</th>
      <th>Event</th>
      <th>Short description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr name='<%=alert.criticality%>'>
		<td><%= alert.generated %></td>
        <td><%= alert.system.display_name unless alert.system.nil? %></td>
        <td><%= alert.service.name unless alert.service.nil? %></td>
        <td><%= alert.criticality %></td>
        <td><%= alert.short_description %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Acknowledge', acknowledge_alert_path(alert), remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>