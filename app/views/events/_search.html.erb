<%= form_tag :search_events, { method: 'get', remote: true} do %>
<%= text_field_tag 'search_terms', (@previous_search.nil? ? "" : "#{@previous_search}"), placeholder: "Search", id: "search_terms"%>
<% timeframes = [
	["10 minutes", 600],
	["30 minutes", 1800],
	["1 hour", 3600],
	["6 hours", 21600],
	["12 hours", 43200],
	["1 day", 86400],
	["1 week", 604800],
	["All records", 50000000]
	] %>
<%= select_tag 'timeframe', options_for_select(timeframes, (@timeframes.nil? ? "600" : @timeframes))%>
<%= submit_tag "Search", id: "searchload" %>
<% end %>
