<div id="event_detail">
	<%= @event.system.display_name %>: <%= @event.generated %> : 
	<% @event.positions.order(:position).each do |position| %>
		<%= link_to position.word.text, "/events/search?search_terms=#{(@previous_search.nil? ? "#{position.word.text}" : "#{@previous_search.gsub(" ", "+") + "+#{position.word.text}"}")}", id: "searchload", remote: true %> 
	<% end %>
</div>