<% if !@event.nil? then %>
	<div id="event_detail">
		<%= @event.system.display_name %>: 
		<%=raw timestamp_helper(@event.generated)%>
		<% if @event.use_display_helper? then %>
		 	<%= @event.parsed %>
		<% else %>
			<% position_number = 0 %>
			<% @event.positions.order(:position).each do |position| %>
				<%= link_to position.word.text, "/events/search?search_terms=#{(@previous_search.nil? ? "#{position.word.text}" : "#{@previous_search.gsub(" ", "+") + "+#{position.word.text}"}")}&timeframe=#{@timeframe}", id: "searchload", title: position_number, remote: @remote %> 
			   <% position_number += 1 %>
			<% end %>
		<% end %>
	</div>
<% end %>