  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
	<div>
		<strong>Rights:</strong>
		<ul>
		<% @role.rights.each do |right| %>
			<li><%= "#{right.name} -> #{right.description}"%>
